<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/space"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/tvWelcomeLabel"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:text="@string/welcome_to_asteroids"
            android:textStyle="bold" android:textSize="24sp"
            android:autoSizeTextType="uniform"
            android:textColor="@color/lightOrange"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btnStart" android:textAlignment="center"/>
    <Button
            android:text="@string/play_game"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnStart" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/btn_rounded" android:textSize="18sp"
            android:textStyle="bold"/>

</android.support.constraint.ConstraintLayout>